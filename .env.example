# Environment Configuration
# Copy this file to .env and update values as needed

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/memory_db
DATABASE_TEST_URL=postgresql://postgres:password@localhost:5432/memory_test_db

# Vector Database Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=

# OpenAI Configuration (for embeddings)
OPENAI_API_KEY=your-openai-api-key-here

# API Configuration
API_SECRET_KEY=your-super-secret-key-change-this-in-production
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT=100/minute

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Application Settings
ENVIRONMENT=development
DEBUG=true
MAX_MEMORY_LENGTH=10000
DEFAULT_EMBEDDING_MODEL=text-embedding-3-small
COLLECTION_NAME=memories

# Redis Configuration (for caching, optional)
REDIS_URL=redis://localhost:6379/0

# Monitoring (optional)
PROMETHEUS_ENABLED=false
METRICS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
